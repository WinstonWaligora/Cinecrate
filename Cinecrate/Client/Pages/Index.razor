        </div>
    </div>
    <div class="black-box">
        <!-- ... any content inside the black box ... -->
    </div>

    <!-- First Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <div class="blue-bar">
                <h1 class="app-title">Cinecrate</h1>
                <button class="close-btn" onclick="closeModal('myModal')"><i class="fas fa-arrow-left"></i></button>
                <button class="save-btn" onclick="saveFunction()"><i class="fas fa-save"></i></button>
            </div>
            <div class="black-box">
                <!-- ... content inside the black box ... -->
            </div>
        </div>
    </div>

    <!-- Detail Page Modal -->
    <div id="myDetailPage" class="modal">
        <div class="modal-content">
            <div class="blue-bar">
                <h1 class="app-title">Cinecrate</h1>
                <button class="close-btn" onclick="closeModal('myDetailPage')"><i class="fas fa-arrow-left"></i></button>
                <button class="edit-btn" onclick="editFunction()"><i class="fas fa-edit"></i></button>
                <button class="delete-btn" onclick="deleteFunction()"><i class="fas fa-trash-alt"></i></button>
            </div>
            <div class="black-box">
                <!-- ... content inside the black box ... -->
            </div>
        </div>
    </div>
    <script>
        function setActiveButton(element) {
            document.querySelectorAll('.text-btn').forEach(btn => {
                btn.classList.remove('active-btn');
            });
            element.classList.add('active-btn');
        }

        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

