@page "/"

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link href="css/app.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body, h1, div {
            margin: 0;
            padding: 0;
        }

        .blue-bar {
            height: 15.00vh;
            background-color: #4052B6;
            width: 100%;
            position: relative;
        }

        .app-title {
            color: white;
            font-family: 'Dirga', sans-serif;
            position: absolute;
            top: 25%;
            left: 10px;
            transform: translateY(-50%);
        }

        .icon-btn {
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 10px;
            transition: transform 0.3s ease;
        }

            .icon-btn:hover i {
                transform: scale(1.2);
            }

            .icon-btn i {
                color: #ffffff;
                transition: transform 0.3s ease;
            }

        .icon-container {
            position: absolute;
            top: 25%;
            right: 10px;
            transform: translateY(-50%);
            color: #ffffff;
        }

        .text-buttons {
            width: 100%; /* Ensures it takes up the full width of its container */
            box-sizing: border-box; /* Ensures padding doesn't add to the width */
            margin: 0; /* Removes any default margin */
            padding: 0; /* Removes any default padding */
            text-align: center;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }

        .text-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 20px;
            margin: 0 50px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }


        /* When the screen width is 768px or less */
        @@media (max-width: 768px) {
            .text-btn {
                margin: 0 0px; /* Adjust the margin as needed */
                font-size: 12px;
            }

            .icon-btn {
                padding: 0px;
            }
        }

        .text-btn:hover {
            background-color: #2f3d8a;
        }

        .active-btn {
            border-bottom: 2px solid #ffffff;
        }

        .black-box {
            background-color: #000000; /* Black background */
            min-height: calc(100vh - 15vh); /* Takes up the rest of the viewport height */
        }

        /* Creation Screen */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
        }

        /* Creation Screen */
        .modal-content {
            background-color: #fff;
            padding: 0;
            border-radius: 5px;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            text-align: center;
        }

        /* Creation Screen */
        .close-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            left: 10px;
            transition: transform 0.3s ease; /* Add transition for smooth scaling */
        }

            /* Creation Screen */
            .close-btn:hover {
                transform: scale(1.2); /* Scale the button up to 120% on hover */
            }

        /* Creation Screen */
        .save-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            right: 10px;
            transition: transform 0.3s ease; /* Add transition for smooth scaling */
        }

            /* Creation Screen */
            .save-btn:hover {
                transform: scale(1.2); /* Scale the button up to 120% on hover */
            }

        /* Detail Screen */
        .detailPage {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
        }

        /* Detail Screen */
        .detailPage-content {
            background-color: #fff;
            padding: 0;
            border-radius: 5px;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            text-align: center;
        }

        /* Detail Screen */
        .close2-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            left: 10px;
            transition: transform 0.3s ease; /* Add transition for smooth scaling */
        }

            /* Detail Screen */
            .close2-btn:hover {
                transform: scale(1.2); /* Scale the button up to 120% on hover */
            }

        /* Detail Screen */
        .delete-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            right: 10px;
            transition: transform 0.3s ease; /* Add transition for smooth scaling */
        }

        /* Detail Screen */
        .delete-btn:hover {
            transform: scale(1.2); /* Scale the button up to 120% on hover */
        }

        /* Detail Screen */
        .edit-btn {
            background-color: #4052B6;
            color: #ffffff;
            padding: 10px 75px;
            border: none;
            cursor: pointer;
            font-size: 20px;
            border-radius: 5px;
            position: absolute;
            bottom: 10px;
            right: 10px;
            transition: transform 0.3s ease; /* Add transition for smooth scaling */
        }

            /* Detail Screen */
            .edit-btn:hover {
                transform: scale(1.2); /* Scale the button up to 120% on hover */
            }


    </style>
</head>

<body>
    <div class="blue-bar">
        <h1 class="app-title">Cinecrate</h1>
        <div class="icon-container">
            <button class="icon-btn" onclick="showModal('myModal')"><i class="fas fa-plus"></i></button>
            <button class="icon-btn" onclick="showModal('myDetailPage')"><i class="fas fa-search"></i></button> 
